{
  "name": "api-testing-framework",
  "version": "1.0.0",
  "description": "Cypress-based RESTful API Testing Framework",
  "main": "index.js",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test": "cypress run",
    "test:headed": "cypress run --headed",
    "test:chrome": "cypress run --browser chrome",
    "test:firefox": "cypress run --browser firefox",
    "test:edge": "cypress run --browser edge",
    "test:auth": "cypress run --spec 'cypress/e2e/auth.spec.js'",
    "test:products": "cypress run --spec 'cypress/e2e/products.spec.js'",
    "test:orders": "cypress run --spec 'cypress/e2e/orders.spec.js'",
    "test:errors": "cypress run --spec 'cypress/e2e/error-handling.spec.js'",
    "test:report": "cypress run --reporter mochawesome",
    "test:allure": "cypress run --env allure=true && allure generate allure-results --clean -o allure-report && allure open",
    "clean:reports": "rm -rf cypress/reports mochawesome-report allure-results allure-report",
    "clean:all": "rm -rf cypress/reports mochawesome-report allure-results allure-report cypress/videos cypress/screenshots node_modules/.cache"
  },
  "keywords": [
    "cypress",
    "api-testing",
    "rest-api",
    "testing-framework"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "cypress": "^13.6.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "@shelex/cypress-allure-plugin": "^2.40.2",
    "dotenv": "^16.3.1"
  }
}

